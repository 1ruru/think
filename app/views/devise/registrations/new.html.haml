.register-photo
  .form-container
    .image-holder
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %h2.text-center
        %strong Create
        an account.
      .form-group
        = f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control"
      .form-group
        = f.email_field :email, placeholder: "Email", class: "form-control"
      .form-group
        = f.password_field :password, placeholder: "Password(#{@minimum_password_length if @minimum_password_length} characters minimum)", class: "form-control"
      .form-group
        = f.password_field :password_confirmation, placeholder: "Password_confirmation", class: "form-control"
      .form-group
        = f.submit "Sign Up", class: "btn btn-primary btn-block"
      = link_to "You already have an account? Login here.", new_session_path(resource_name), class: "already"